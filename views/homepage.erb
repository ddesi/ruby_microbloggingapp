<form method="post" action="/homepage">
	<textarea name="body" placeholder="share your pizza in 150 characters or less!" rows="10" maxlength="150"></textarea><br><br><br>
	<input type="submit" value="Submit">
</form>

<% if flash[:alert] %>
	<div class="flash alert">
		<%= flash[:alert] %>
	</div>
<% end %>	

<% if flash[:notice] %>
	<div class="flash notice">
		<%= flash[:notice] %>
	</div>
<% end %>


	<% @posts.reverse.each do |post| %>
	      <div id="post">
	      	<p><strong>by: </strong><%= User.find(post.user_id).username %></p>
	      	<p><strong>post: </strong><%= post.body %></p>
	      	<p><strong> time: </strong><%= post.posttime %></p>
	      	<p><a class="btn" href="/posts/<%= post.id %>/delete">delete post</a></p></div>

	<% end %>





<div id="userProfile"><h1><%= current_user.username %></h1>
<p><%= current_user.email %></p>
<p><%= current_user.about %></p>
<a href ="/editprofile">Edit Profile</a>
</div>

<!-- <a href="/profile/<%= current_user %>/delete">delete profile</a> -->
<div id="userPosts">
<% @posts.reverse.each do |post| %>
	      <div id="post">
	      	<p>By: <%= User.find(post.user_id).username %></p>
	      	<p><strong>post: </strong><%= post.body %></p>
	      	<p><strong> time: </strong><%= post.posttime %></p>
	      	<p><a class="btn" href="/posts/<%= post.id %>/delete">delete post</a></p></div>
	
	<% end %>
</div>




